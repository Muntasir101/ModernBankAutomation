<?xml version="1.0" encoding="UTF-8"?>
<suite name="Login Test Suite">
    <test name="Login Tests">
        <parameter name="paramEmail" value="john@example.com"/>
        <parameter name="paramPassword" value="password123"/>

        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

    <test name="Parallel Tests" parallel="methods" thread-count="3">
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="testSuccessfulLogin"/>
                    <include name="testLoginWithInvalidUsername"/>
                    <include name="testLoginWithInvalidPassword"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>